import random # This makes the program randomly choose a word from the word bank

# Welcome message and introduction
print("Welcome! This is 'Guess the Word'!")
print("You will need to guess the correct word! You have 10 attempts! The theme of the day is 'Food'! Good luck!")

word_bank = ['fries', 'soda','burgers','pizza','dips','taco','pasta']
# this makes the hangman word one of the words from your word bank 
# the random is from ur bank and choice function chooses from word_bank 
word = random.choice(word_bank)
# the word to be guessed is represented in dashes - the number of dashes will be the number of letters as placeholders for the letters of the word
guessedword = ['_ '] * len(word)
attempts = 10 # total attempts allowed are 10

# defining the loop of winning possibility > when the attempts have NOT YET FINISHED
while attempts > 0:
    print('\nCurrent word: ' + ''.join(guessedword))
    guess = input('Guess a letter: ').lower() # lower case letters allowed only 
    
    if guess == "": # in the case of an empty guess
        print("You must enter a letter")
        continue
    
    # in the case of a correct guess
    if guess in word:
        for i in range(len(word)):
            if word[i] == guess:
                guessedword[i] = guess
        print('Great guess!')
    else: # in the case of an incorrect guess
        attempts -= 1 # deduct an attempt for a wrong guess
        print('Wrong guess! Attempts left: ' + str(attempts))
    if '_ ' not in guessedword: # guesswedword is the selected word from the word bank # IF THE WORD DOES NOT HAVE ANY BLANKS LEFT, THAT MEANS ALL BLANKS HAVE BEEEN FILLED AND YOU HAVE WON!
        print("\nCongratulations! You've guessed the word "+ word)
        break
if attempts == 0 and '_ 'in guessedword: # THE BLANK MEANS SPARE LETTERS THAT HAVE NOT BEEN GUESSED!! SO IF THE WORD DOES HAVE SPARE LETTERS AND ATTEMPTS = 0 YOU LOSE!
    print("\nYou've run out of attempts! The word was: " + word)
    
print("\nThanks for playing Guess the Word!")
